<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardActivity">

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:text="What's Today?"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="35sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/dashboard_subtitle"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboard_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="Let's get some work done!"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_below="@id/dashboard_subtitle"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:background="@drawable/search_bar"
        android:hint="@string/search_bar"
        android:textColorHint="#FFFBFB"
        android:paddingHorizontal="80dp"
        />

    <Button
        android:id="@+id/filter_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="344dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/filter_list"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_todo"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="325dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/add_button"
        android:clickable="true" />


</RelativeLayout>